pkgname=qmarineplatformtheme
pkgver=1.0
pkgrel=1
pkgdesc="Another qt5ct for qt6, use toml as config"
arch=('x86_64' 'aarch64')
license=('MIT')
makedepends=('git' 'ninja' 'cmake' 'tomlplusplus')

source=('source.tar.gz')
sha512sums=('SKIP')

build() {
  cmake -GNinja \
        -DCMAKE_INSTALL_PREFIX=/usr
  ninja
}

package() {
  DESTDIR="$pkgdir" ninja install
}
